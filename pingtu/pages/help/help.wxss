/**help.wxss**/
.help {
	min-height: 100vh;
	background: #f1f1f1;
	padding: 32rpx 32rpx 0;
	position: relative;
}

.item {
	background: #fff;
	border-radius: 2px;
	font-size: 16px;
	color: #333;
	letter-spacing: 0;
	margin-bottom: 24rpx;
}

.item p {
	display: block;
	padding: 22rpx 24rpx;
}

.active {
	color: #999;
}

.item .more {
	width: 32rpx;
	height: 32rpx;
	float: right;
}

.detail {
	font-size: 14px;
	color: #333333;
	padding-top: 24rpx;
	border-top: 2rpx solid #EBEBEB;
}

button {
	line-height: 88rpx;
	background: #1AAD19;
	border: 1px solid rgba(5,5,5,0.08);
	border-radius: 4px;
	font-size: 16px;
	color: #fff;
	letter-spacing: 0;
	margin-top: 24rpx;
}

.bot {
	position: absolute;
	bottom: 24rpx;
	font-size: 14px;
	color: #999999;
	letter-spacing: 0;
	left: 50%;
	transform: translateX(-50%);
}

.bot i {
	display: inline-block;
	width: 4rpx;
	height: 24rpx;
	background-color: #D0CDCD;
	margin: 0 32rpx;
}

.bot a {
	color: #586C94;
}
