/**withdraw.wxss**/
.withdraw {
	min-height: 100vh;
	background-color: #f1f1f1;
	padding: 32rpx 32rpx 0;
}

.box {
	background: #fff;
	border-radius: 2px;
	height: 652rpx;
	padding: 32rpx 48rpx;
}

.title {
	font-size: 28rpx;
	color: #333333;
	margin-right: 72rpx;
	font-family: PingFangSC-Regular;
}

.yue {
	color: #999999;
	letter-spacing: 0;
}

.money {
	font-size: 56rpx;
	margin-right: 10rpx;
}

.withdraw-input p {
	display: block;
}

.withdraw-input p:last-child {
	font-size: 30px;
	color: #333333;
	letter-spacing: 0;
	margin-top: 32rpx;
	padding-bottom: 44rpx;
	border-bottom: 2rpx solid #EBEBEB;
	line-height: 116rpx;
}
.withdraw-input p:last-child span {
	display: inline-block;
	vertical-align: middle;
	margin-right: 22rpx;
}
input {
	display: inline-block;
	vertical-align: middle;
	width: 500rpx;
	font-size: 50px;
	color: #333333;
	letter-spacing: 0;
	height: 116rpx;
}

.tips {
	display: block;
	font-size: 14px;
	color: #999999;
	letter-spacing: 0;
	margin: 32rpx 0;
}

.tips span {
	color: #586C94;
}

button {
	height: 88rpx;
	background: #1AAD19;
	border: 1px solid rgba(5,5,5,0.08);
	border-radius: 4px;
	font-size: 16px;
	color: #FFFFFF;
	letter-spacing: 0;
}

.error {
	display: block;
	line-height: 48rpx;
	font-size: 14px;
	color: #fff;
	letter-spacing: 0;
	text-align: center;
	background: #DD5051;
	margin: 16rpx 0;
}

.error image {
	width: 32rpx;
	height: 32rpx;
	margin-right: 10rpx;
	display: inline-block;
	vertical-align: middle;
}
